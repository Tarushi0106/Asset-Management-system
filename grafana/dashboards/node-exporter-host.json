{
  "uid": "node-exporter-host",
  "title": "Node Exporter Host",
  "description": "Host system metrics from Node Exporter",
  "tags": ["node-exporter", "system"],
  "timezone": "browser",
  "schemaVersion": 16,
  "version": 1,
  "refresh": "30s",
  "time": { "from": "now-6h", "to": "now" },
  "timepicker": { "hidden": false },
  "panels": [
    {
      "id": 1,
      "type": "graph",
      "title": "CPU Usage",
      "targets": [
        { "expr": "sum(rate(node_cpu_seconds_total{mode!~\"idle|iowait\"}[5m])) by (instance)", "legendFormat": "{{instance}}", "refId": "A" }
      ],
      "gridPos": {"x": 0, "y": 0, "w": 12, "h": 8}
    },
    {
      "id": 2,
      "type": "graph",
      "title": "Memory Usage (MB)",
      "targets": [
        { "expr": "(node_memory_MemTotal_bytes - node_memory_MemAvailable_bytes) / 1024 / 1024", "legendFormat": "Memory MB", "refId": "A" }
      ],
      "gridPos": {"x": 12, "y": 0, "w": 12, "h": 8}
    }
  ]
}
